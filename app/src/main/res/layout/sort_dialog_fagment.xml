<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sorting"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radio_date_minus"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button_my"
                android:paddingStart="10dp"
                android:text="Дата по убыванию"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radio_date_plus"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:button="@drawable/radio_button_my"
                android:paddingStart="10dp"
                android:text="Дата по возрастанию"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radio_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:button="@drawable/radio_button_my"
                android:paddingStart="10dp"
                android:text="По приоритету"
                android:textSize="12sp" />
        </RadioGroup>

        <!--</androidx.constraintlayout.widget.ConstraintLayout>-->
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>